<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterThreeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <ImageView
            android:id="@+id/return1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/no" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/im" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:text="完善你的信息"
        android:textSize="20sp"
        android:textColor="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:textColor="#919090"
        android:textSize="12sp"
        android:text="填写真实姓名有助于匹配，我们将保护你的个人信息"/>
    <EditText
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:hint="性别"

        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/birth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:hint="生日"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/qianmin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:hint="签名"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:hint="邮箱"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector_reg"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/next"
        android:text="开启你的科技之旅吧"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>